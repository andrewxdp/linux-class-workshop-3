#define LED_PIN 2

void setup() {
  pinMode(LED_PIN, OUTPUT);   // ตั้งขา GPIO 2 เป็น OUTPUT
  Serial.begin(115200);       // เริ่ม Serial Debug
  Serial.println("=== ESP32 Blink LED with Debug ===");
}

void loop() {
  digitalWrite(LED_PIN, HIGH);   // เปิดไฟ
  Serial.println("LED ON");      // Debug message
  delay(500);                     // รอ 0.5 วินาที

  digitalWrite(LED_PIN, LOW);    // ปิดไฟ
  Serial.println("LED OFF");      // Debug message
  delay(500);                     // รอ 0.5 วินาที
}
